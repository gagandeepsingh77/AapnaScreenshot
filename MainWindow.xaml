                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ParallelTimeline Duration="0:0:2">

                                    <ColorAnimation Duration="0:0:1"
                                Storyboard.TargetProperty="(Button.BorderBrush).(SolidColorBrush.Color)"
                                From="#FFCACCD3" To="Yellow" />
                                    <ColorAnimation Duration="0:0:1" 
                                Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                From="#FFCACCD3" To="Yellow" />
                                    <ColorAnimation Duration="0:0:1" 
                                Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"
                                From="#FF767E89" To="Black" />
                                </ParallelTimeline>
                            </Storyboard>
                        </BeginStoryboard>
                        <BeginStoryboard>
                            <Storyboard>
                                <ParallelTimeline Duration="0:0:2">
                                </ParallelTimeline>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Button.MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ParallelTimeline Duration="0:0:2">

                                    <ColorAnimation Duration="0:0:1" 
                                Storyboard.TargetProperty="(Button.BorderBrush).(SolidColorBrush.Color)"
                                From="Yellow" To="#FFCACCD3" />
                                    <ColorAnimation Duration="0:0:1" 
                                Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                From="Yellow" To="#FFCACCD3" />
                                    <ColorAnimation Duration="0:0:1" 
                                Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"
                                From="Black" To="#FF767E89" />

                                </ParallelTimeline>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </ControlTemplate>
        <ControlTemplate TargetType="Button" x:Key="btTemplate4">
            <Border CornerRadius="25" BorderBrush="#FFB7B9BF" Background="#FFCACCD3" Height="40" Width="140"  Margin="440,400,0,0">
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Button.MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ParallelTimeline Duration="0:0:2">

                                    <ColorAnimation Duration="0:0:1" 
                                Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                From="#FFCACCD3" To="Yellow" />
                                    <ColorAnimation Duration="0:0:1" 
                                Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"
                                From="#FF767E89" To="Black" />
                                </ParallelTimeline>
                            </Storyboard>
                        </BeginStoryboard>
                        <BeginStoryboard>
                            <Storyboard>
                                <ParallelTimeline Duration="0:0:2">
                                </ParallelTimeline>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Button.MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ParallelTimeline Duration="0:0:2">

